<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
        android:text="Nombre del Plato:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <TextView
            android:text="Nombre del Plato:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_plate_name"/>

       <ImageView
           android:src="@drawable/ico_09"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/plateImage"/>
        <TextView
            android:text="Descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPlateDescription"/>
        <TextView
            android:text="Alergenos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Alergenos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPlateAlergens"/>
        <TextView
            android:text="Precio: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPlatePrice"/>


    </LinearLayout>



</LinearLayout>